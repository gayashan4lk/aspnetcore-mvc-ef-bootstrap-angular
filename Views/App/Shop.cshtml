@model IEnumerable<Product>

<h1>Shop</h1>
<p>Count: @Model.Count()</p>

<div class="row">
@foreach (var product in Model)
{
    <div class="col-md-3">
        <div class="border bg-light rounded p-1">
            <img class="img-fluid" src="~/img/@(product.ArtId).jpg" alt="@product.Artist" />
            <h3>@product.Category - @product.Size</h3>
            <ul class="product-props">
                <li>Price: @product.Price</li>
                <li>Artist: @product.Artist</li>
                <li>Title: @product.Title</li>
                <li>Description: @product.ArtDescription</li>
            </ul>
            <button id="buyButton" class="btn btn-success">Buy</button>
        </div>
    </div>
}
</div>